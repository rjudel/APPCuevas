<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.jobreporting.views.TskDetailsActivityFragment"
    tools:showIn="@layout/activity_tsk_details"
    android:id="@+id/layout_tsk_details"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView_tsk_details"
        android:layout_gravity="center_horizontal" >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:id="@+id/scrollView_layout_tsk_details"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_width="match_parent">


            <LinearLayout
                android:layout_width="125dp"
                android:layout_height="10dp"
                android:id="@+id/layout_rpt_form_heading"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                >

                //campos dinamicos

                <LinearLayout
                    android:layout_width="33dp"
                    android:layout_height="44dp"
                    android:id="@+id/layout_rpt_form_dyna"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="60dp"
                    android:paddingBottom="50dp">

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>



    </ScrollView>


</LinearLayout>
